                <methods>
                    <include name="testCheckoutPage"/>
                </methods>
            </class>
            <class name="test.DepartmentPage">
                <methods>
                    <include name="departmentTest"/>
                </methods>
            </class>
            <class name="test.HomePageTest">
                <methods>
                    <include name="validateTitle"/>
                    <include name="bottomLink"/>
                    <include name="openWebTest"/>
                </methods>
            </class>
            <class name="test.LoginPageTest">
                <methods>
                    <include name="testLoginPage"/>
                </methods>
            </class>
            <class name="test.NegativeLoginPage">
                <methods>
                    <include name="testNegativeLoginPage"/>
                </methods>
            </class>
            <class name="test.NegativeSignUp">
                <methods>
                    <include name="negativeSignUp"/>
                </methods>
            </class>
            <class name="test.ShoppingCartPageTest">
                <methods>
                    <include name="searchProduct"/>
                </methods>
            </class>
            <class name="test.SignUpPageTest">
                <methods>
                    <include name="validatePositiveSignUp"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>